{
  "include": ["src"],
  "compilerOptions": {
    // Set build target
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "ES2020.Promise", "ES2020.String", "ES2020.BigInt", "DOM", "DOM.Iterable"],
    "jsx": "preserve",

    // Set Output & Module resolution
    "outDir": "./dist",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true, // Don't typecheck library definitions

    // Language checking
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "removeComments": false // Some Modules have Webpack specific comments to allow lazy loading
  },
  
  "exclude": ["node_modules", "tests", "dist", "cjs"]
}