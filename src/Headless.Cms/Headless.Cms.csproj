<Project Sdk="Microsoft.NET.Sdk.Web">
    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <RootNamespace>HeadlessCms</RootNamespace>
        <!-- Prepare for a nullable codebase -->
        <Nullable>warnings</Nullable>
        <Version>1.0.0.19</Version>
        <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <Authors>Remko Jantzen / Optimizely SA Team</Authors>
        <Company>Optimizely</Company>
        <Product>Foundation SPA React (CMS 12)</Product>
    </PropertyGroup>
	<ItemGroup>
		<Using Include="System" />
		<Using Include="System.Collections" />
		<Using Include="System.Collections.Generic" />
		<Using Include="System.Linq" />
		<Using Include="System.IO" />
		<Using Include="System.Threading" />
		<Using Include="Microsoft.Extensions.DependencyInjection" />
		<Using Include="Microsoft.Extensions.DependencyInjection.Extensions" />
		<Using Include="EPiServer" />
		<Using Include="EPiServer.Core" />
		<Using Include="EPiServer.DataAbstraction" />
		<Using Include="EPiServer.DataAnnotations" />
	</ItemGroup>
    <!-- Resolve file publishing issue related to the EPiServer.Forms module -->
    <ItemGroup>
        <Compile Remove="Models\**" />
        <Compile Remove="modules\_protected\EPiServer.Forms\**" />
        <Content Remove="Models\**" />
        <Content Remove="modules\_protected\EPiServer.Forms\**" />
        <EmbeddedResource Remove="Models\**" />
        <EmbeddedResource Remove="modules\_protected\EPiServer.Forms\**" />
        <None Remove="Models\**" />
        <None Remove="modules\_protected\EPiServer.Forms\**" />
    </ItemGroup>
    <ItemGroup>
      <Content Remove="nuget.config" />
    </ItemGroup>
    <ItemGroup>
        <None Remove="App_Data\certificates\my.pfx" />
        <None Remove="App_Data\foundation.episerverdata" />
    </ItemGroup>
    <ItemGroup>
        <Content Include="App_Data\certificates\my.pfx">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
        <Content Include="App_Data\foundation.episerverdata">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
    </ItemGroup>
    <ItemGroup>
        <Folder Include="wwwroot\" />
        <None Include="..\..\README.md">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
        <None Include="nuget.config" />
	</ItemGroup>
	<ItemGroup>
        <!-- Optimizely CMS, with OIDC provider -->
        <PackageReference Include="EPiServer.CMS" Version="12.27.1" />
        <PackageReference Include="EPiServer.GoogleAnalytics" Version="4.2.0" />
        <PackageReference Include="EPiServer.ImageLibrary.ImageSharp" Version="2.0.1" />
        <PackageReference Include="EPiServer.OpenIDConnect" Version="3.10.2" />
        <PackageReference Include="EPiServer.OpenIDConnect.UI" Version="3.10.2" />
		
        <!-- APIs -->
        <PackageReference Include="EPiServer.ContentDefinitionsApi" Version="3.10.2" />
        <PackageReference Include="EPiServer.ContentDeliveryApi.Cms" Version="3.10.2" />
        <PackageReference Include="EPiServer.ContentDeliveryApi.Forms" Version="3.10.2" />
        <PackageReference Include="EPiServer.ContentDeliveryApi.Search" Version="3.10.2" />
        <PackageReference Include="EPiServer.ContentManagementApi" Version="3.10.2" />
		
        <!-- Optimizely Search & Navigation -->
        <PackageReference Include="EPiServer.Find.Cms" Version="16.1.0" />
        <PackageReference Include="EPiServer.Find.Personalization" Version="16.1.0" />
		
        <!-- Optimizely Content Graph -->
		<PackageReference Include="Optimizely.ContentGraph.Cms" Version="3.5.5" />
		
        <!-- Add support for Optimizely DXP -->
        <PackageReference Include="EPiServer.CloudPlatform.Cms" Version="1.6.0" />
		
        <!-- Productivity enhancements from Optimizely Labs-->
        <PackageReference Include="EPiServer.Labs.GridView" Version="1.1.0" />
        <PackageReference Include="EPiServer.Labs.LanguageManager" Version="5.2.0" />
		
        <!-- Optimizely Forms & Marketing Automation Connectors -->
        <PackageReference Include="EPiServer.Forms" Version="5.8.0" />
        <PackageReference Include="EPiServer.ConnectForMarketingAutomation" Version="6.1.4" />
        <PackageReference Include="Optimizely.Labs.MarketingAutomationIntegration.ODP" Version="1.0.2" />
        <PackageReference Include="EPiServer.Marketing.Automation.Forms" Version="3.1.3" />
		<PackageReference Include="EPiServer.ConnectForCampaign" Version="4.2.0" />
		
        <!-- ImageSharp wrapper for Optimizely CMS -->
        <PackageReference Include="Baaijte.Optimizely.ImageSharp.Web" Version="2.2.2" />
        <PackageReference Include="SixLabors.ImageSharp.Web.Providers.Azure" Version="3.1.0" />
		
        <!-- Visitor group criterion for ODP -->
        <PackageReference Include="UNRVLD.ODP.VisitorGroups" Version="1.4.0.33" />
		
        <!-- Reverse proxy to communicate with Next.JS running on the same server-->
        <PackageReference Include="Yarp.ReverseProxy" Version="2.1.0" />
		
        <!-- Fix Dependency graph by explicitly stating package versions -->
        <PackageReference Include="EPiServer.Hosting" Version="12.20.3" />
		<PackageReference Include="EPiServer.CMS.AspNetCore.HtmlHelpers" Version="12.20.3" />
		<PackageReference Include="EPiServer.CMS.AspNetCore.TagHelpers" Version="12.20.3" />
    </ItemGroup>
    <!-- Make sure only locally managed modules are published from the project -->
    <ItemGroup>
        <Content Update="modules\_protected\**">
            <CopyToOutputDirectory>Never</CopyToOutputDirectory>
            <CopyToPublishDirectory>Never</CopyToPublishDirectory>
        </Content>
        <Content Update="modules\_protected\Headless.Cms\**">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
            <CopyToPublishDirectory>Always</CopyToPublishDirectory>
        </Content>
        <None Update="modules\_protected\Headless.Cms\**">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
            <CopyToPublishDirectory>Always</CopyToPublishDirectory>
        </None>
    </ItemGroup>
    <ItemGroup>
        <ProjectReference Include="..\Foundation.ContentApi.Extensions\Foundation.ContentApi.Extensions.csproj" />
        <ProjectReference Include="..\Foundation.Settings\Foundation.Settings.csproj" />
        <ProjectReference Include="..\Foundation.ApiExplorer\Foundation.ApiExplorer.csproj" />
        <ProjectReference Include="..\Foundation.ContentActionsApi\Foundation.ContentActionsApi.csproj" />
        <ProjectReference Include="..\Webhooks\src\DeaneBarker.Optimizely.Webhooks.csproj" />
    </ItemGroup>
</Project>